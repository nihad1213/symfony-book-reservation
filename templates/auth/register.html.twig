{% extends 'base.html.twig' %}

{% block title %}Register - Symfony Book Reservation{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <!-- Card Container -->
    <div class="bg-white shadow-lg rounded-xl w-80 p-6">
        <!-- Card Header -->
        <div class="text-center mb-4">
            <h2 class="text-2xl font-bold text-gray-800">Register</h2>
        </div>

        <!-- Register Form -->
        <form action="{{ path('app_auth_register') }}" method="post" class="space-y-4">
            <div class="space-y-4">
                <input type="text" name="name" placeholder="Full Name" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">

                <input type="email" name="email" placeholder="Email" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                
                <input type="password" name="password" placeholder="Password" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">

                <input type="password" name="confirm_password" placeholder="Confirm Password" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 text-sm transition-colors">
                Register
            </button>
        </form>

        <!-- Footer -->
        <p class="text-xs text-center text-gray-500 mt-4">
            Already have an account? 
            <a href="{{ path('app_auth_login') }}" class="text-blue-600 hover:underline">Login</a>
        </p>
    </div>
</div>
{% endblock %}