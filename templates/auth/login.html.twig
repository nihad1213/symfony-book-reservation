{% extends 'base.html.twig' %}

{% block title %}Login - Symfony Book Reservation{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <!-- Card Container -->
    <div class="bg-white shadow-lg rounded-xl w-80 p-6">
        <!-- Card Header -->
        <div class="text-center mb-4">
            <h2 class="text-2xl font-bold text-gray-800">Login</h2>
        </div>

        <!-- Login Form -->
        <form action="{{ path('app_auth_login') }}" method="post" class="space-y-4">
            <div class="space-y-6">
                <input type="email" name="_username" placeholder="Email" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                
                <input type="password" name="_password" placeholder="Password" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
            </div>

            <div class="flex items-center justify-between text-sm text-gray-600">
                <label class="flex items-center">
                    <input type="checkbox" name="_remember_me" class="mr-2 rounded">
                    Remember me
                </label>
                <a href="#" class="text-blue-600 hover:underline">Forgot?</a>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 text-sm transition-colors">
                Login
            </button>
        </form>

        <!-- Footer -->
        <p class="text-xs text-center text-gray-500 mt-4">
            Don't have an account? 
            <a href="{{ path('app_auth_register') }}" class="text-blue-600 hover:underline">Register</a>
        </p>
    </div>
</div>
{% endblock %}