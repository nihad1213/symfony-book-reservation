{% extends 'base.html.twig' %}

{% block title %}Symfony Book Reservation Main Page{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="text-center mb-10">
            <h2 class="text-4xl font-bold text-gray-800 mb-4">Available Books</h2>
            <p class="text-gray-600 text-lg">Discover and reserve your favorite books</p>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" placeholder="Search books..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div class="md:w-48">
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option>All Categories</option>
                        <option>Fiction</option>
                        <option>Non-Fiction</option>
                        <option>Science</option>
                        <option>History</option>
                    </select>
                </div>
                <button class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors font-medium">
                    Search
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-10">
            {% for i in 1..12 %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <div class="h-64 bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center">
                    <div class="text-center">
                        <div class="w-16 h-20 bg-blue-500 rounded mx-auto mb-2"></div>
                        <span class="text-blue-600 text-sm font-medium">Book Cover</span>
                    </div>
                </div>
                <div class="p-4">
                    <h3 class="font-bold text-gray-800 text-lg mb-2 line-clamp-2">
                        Sample Book Title {{ i }}
                    </h3>
                    <p class="text-gray-600 text-sm mb-2">Author Name {{ i }}</p>
                    <p class="text-gray-500 text-xs mb-3 line-clamp-2">
                        This is a sample description of the book that might be quite long but will be truncated...
                    </p>
                    <div class="flex items-center justify-between mb-3">
                        <span class="text-sm text-gray-500">Category: Fiction</span>
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <span class="text-sm text-gray-600">4.5</span>
                        </div>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm font-medium text-green-600">Available</span>
                        <button class="bg-blue-500 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-600 transition-colors">
                            Reserve
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="flex flex-col items-center">
            <div class="text-sm text-gray-600 mb-4">
                Showing <span class="font-medium">1</span> to <span class="font-medium">12</span> of <span class="font-medium">120</span> results
            </div>

            <nav class="flex items-center space-x-1">
                <button class="px-3 py-2 text-sm text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-50 hover:text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>

                <button class="px-3 py-2 text-sm text-white bg-blue-500 border border-blue-500 hover:bg-blue-600">1</button>
                <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 hover:text-blue-600">2</button>
                <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 hover:text-blue-600">3</button>
                <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 hover:text-blue-600">4</button>
                <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 hover:text-blue-600">5</button>
                <span class="px-3 py-2 text-sm text-gray-500 bg-white border border-gray-300">...</span>
                <button class="px-3 py-2 text-sm text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 hover:text-blue-600">10</button>

                <button class="px-3 py-2 text-sm text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-50 hover:text-gray-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </nav>
        </div>
    </div>
</div>

<!-- Sample Modal for Book Details (Optional) -->
<div id="bookModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold text-gray-900">Book Details</h3>
                <button class="text-gray-400 hover:text-gray-600" onclick="closeModal()">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="mb-4">
                <p class="text-sm text-gray-600">Detailed information about the book would go here...</p>
            </div>
            <div class="flex justify-end space-x-3">
                <button class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400" onclick="closeModal()">
                    Close
                </button>
                <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                    Reserve Book
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function openModal() {
    document.getElementById('bookModal').classList.remove('hidden');
}

function closeModal() {
    document.getElementById('bookModal').classList.add('hidden');
}
</script>
{% endblock %}